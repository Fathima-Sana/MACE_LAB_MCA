do
	((sum=sum+i))
done
echo $sum


--------------------------------------------------------------------------------------------------------------------
EX9.sh
--------------------------------------------------------------------------------------------------------------------

i=0
sum=0
while ((i<10));do
	((sum=sum+i))
	((i=i+1))
done
echo $sum

--------------------------------------------------------------------------------------------------------------------
EX10.sh
--------------------------------------------------------------------------------------------------------------------
echo "Enter your option: 1: add, 2:sub, 3:mul"
read i
case $i in
	1)echo $(($1+$2));;
	2)echo $(($1-$2));;
	3)echo $(($1*$2))
esac

--------------------------------------------------------------------------------------------------------------------
EX11.sh
--------------------------------------------------------------------------------------------------------------------
select i in add sub mul quit
do
	case $i in
		"add") echo $(($1+$2));;
		"sub") echo $(($1-$2));;
		"mul") echo $(($1*$2));;
		"quit") break;;
		*) echo "Invalid option"
	esac
done

--------------------------------------------------------------------------------------------------------------------
EX12.sh
--------------------------------------------------------------------------------------------------------------------
add()
{
	i=$1
	j=$2
	((k=i+j))
	echo Sum is $k
}
sub()
{
	i=$1
	j=$2
	((k=i-j))
	echo Sum is $k
}
mul()
{
	i=$1
	j=$2
	((k=i*j))
	echo Sum is $k
}
echo "Enter your option: 1: Add, 2:Subtract, 3: Multiply"
read i
case $i in
	1) add $1 $2;;
	2) sub $1 $2;;
	3) mul $1 $2;;
esac
